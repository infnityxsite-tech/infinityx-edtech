# DATABASE (PostgreSQL - Provided by Render)
# Render will automatically set this variable when you add PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/database

# AUTH / JWT
# Render can auto-generate this, or you can set your own
JWT_SECRET=your_production_jwt_secret_here_change_this

# APP CONFIG
VITE_APP_ID=infinityx_production
VITE_APP_TITLE=InfinityX

# NODE ENV (Render sets this automatically)
NODE_ENV=production

# PORT (Render sets this automatically)
PORT=10000

